{
  "name": "linecompletion",
  "displayName": "lineCompletion",
  "description": "",
  "version": "0.0.1",
  "publisher": "DanielEbert",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielEbert/lineCompletion.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "linecompletion.suggestFromContext",
        "title": "Suggest Based on Context"
      },
      {
        "command": "linecompletion.addSelectionToContext",
        "title": "Add Selection to Context",
        "category": "LineCompletion"
      }
    ],
    "keybindings": [
      {
        "command": "linecompletion.suggestFromContext",
        "key": "cmd+shift+w",
        "mac": "ctrl+shift+w",
        "when": "editorTextFocus"
      },
      {
        "command": "linecompletion.addSelectionToContext",
        "key": "ctrl+alt+c",
        "mac": "ctrl+cmd+c",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llm-context-sidebar",
          "title": "LLM Context",
          "icon": "img/icon.svg"
        }
      ]
    },
    "views": {
      "llm-context-sidebar": [
        {
          "id": "llmContextView",
          "name": "LLM Context",
          "icon": "img/icon.svg",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cpx \"src/webview/**\" out/webview",
    "local_install": "vsce package && code --uninstall-extension danielebert.linecompletion || code --install-extension ./linecompletion-0.0.1.vsix",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "cpx": "^1.5.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "ignore": "^7.0.5",
    "markdown-it": "^14.1.0",
    "node-fetch": "^2.7.0"
  }
}